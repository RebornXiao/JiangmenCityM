<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_goods_pay_money"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <ImageView
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/arrow_return"/>

        <TextView
            android:id="@+id/tv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_go_back"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="返回"
            android:textColor="@color/register_un"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="@color/title"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/title_line"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五邑大学"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_marginTop="30dp"
        android:textColor="@color/red"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五邑大学三号楼"/>


    <TextView
        android:id="@+id/tv_go"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:background="@drawable/shape_blue_white"
        android:textColor="@color/register_un"
        android:layout_height="wrap_content"
        android:text="到这里去"/>

</LinearLayout>